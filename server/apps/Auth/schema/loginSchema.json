{
  "definitions": {},
  "type": "object",
  "title": "The Login Schema",
  "required": [
    "email",
    "password"
  ],
  "properties": {
    "email": {
      "$id": "email",
      "type": "string",
      "title": "The Email Schema",
      "minLength": 3,
      "maxLength": 50,
      "format": "email"
    },
    "password": {
      "$id": "password",
      "type": "string",
      "title": "The Password Schema"
    },
    "name": {
      "$id": "name",
      "type": "string",
      "title": "The Name Schema",
      "minLength": 3,
      "maxLength": 20
    },
    "phone": {
      "$id": "phone",
      "type": "string",
      "title": "The Phone Schema",
      "pattern": "^[0-9 +]+$",
      "minLength": 11,
      "maxLength": 13
    },
    "role": {
      "$id": "role",
      "type": "string",
      "title": "The Role Schema",
      "enum": ["admin", "user"]
    },
    "picture": {
      "$id": "picture",
      "type": "string",
      "title": "The Picture Schema"
    },
    "gender": {
      "$id": "gender",
      "type": "string",
      "title": "The Gender Schema",
      "enum": ["male", "female"]
    }
  }
}